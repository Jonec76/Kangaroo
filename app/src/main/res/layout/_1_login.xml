<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center" android:focusable="true" android:focusableInTouchMode="true"
                >
    <ImageView android:layout_width="0dp"
               android:layout_height="133dp"
               android:src="@drawable/ic_lock_outline_black_24dp" app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintTop_toTopOf="parent"
               android:id="@+id/img_lock"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintHorizontal_bias="0.0"
               android:layout_marginTop="48dp"/>
    <TextView android:layout_width="wrap_content" android:layout_height="0dp"
              android:text="帳號"
              android:textSize="18sp"
              android:id="@+id/tv_account"
              app:layout_constraintStart_toStartOf="@+id/img_lock"
              app:layout_constraintEnd_toEndOf="@+id/img_lock"
              android:layout_marginStart="8dp" android:layout_marginLeft="8dp"
              app:layout_constraintHorizontal_bias="0.242" app:layout_constraintTop_toBottomOf="@+id/img_lock"
              android:layout_marginTop="40dp"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:text="密碼"
              android:textSize="18sp" android:layout_marginTop="32dp"
              app:layout_constraintTop_toBottomOf="@+id/tv_account" android:id="@+id/tv_password"
              app:layout_constraintStart_toStartOf="@+id/tv_account"
              app:layout_constraintEnd_toEndOf="@+id/tv_account"
              app:layout_constraintHorizontal_bias="0.0"/>
    <EditText android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:hint="account "
              android:layout_centerHorizontal="true"
              android:id="@+id/account"
              android:inputType="text"
              android:cursorVisible="true"
              android:imeOptions="actionDone"
              app:layout_constraintStart_toStartOf="@+id/img_lock"
              app:layout_constraintEnd_toEndOf="@+id/img_lock"
              app:layout_constraintHorizontal_bias="0.634"
              android:layout_marginStart="8dp" android:layout_marginLeft="8dp"
              android:layout_marginTop="28dp" app:layout_constraintTop_toBottomOf="@+id/img_lock"/>
    <EditText android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_centerHorizontal="true"
              android:hint="password"
              android:id="@+id/password"
              android:inputType="text"
              android:cursorVisible="true"
              android:layout_below="@+id/account"
              android:layout_centerInParent="true"
              app:layout_constraintTop_toBottomOf="@+id/account"
              android:layout_marginTop="16dp"
              app:layout_constraintEnd_toEndOf="@+id/account"
              app:layout_constraintStart_toStartOf="@+id/account" app:layout_constraintHorizontal_bias="0.0"/>
    <Button android:layout_width="131dp"
            android:layout_height="56dp"
            android:id="@+id/accountSubmit"
            android:text="Submit"
            app:layout_constraintStart_toStartOf="@+id/tv_password"
            app:layout_constraintEnd_toEndOf="@+id/password"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.482" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/password" app:layout_constraintVertical_bias="0.371"/>
</androidx.constraintlayout.widget.ConstraintLayout>